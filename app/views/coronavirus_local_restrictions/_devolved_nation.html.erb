<%
  title = t("coronavirus_local_restrictions.results.devolved_nations.heading")
%>

<% content_for :title, title %>

<%= tag.div :data => {
  :module => "coronavirus-track-local-restriction-results",
  "tracking-label" => "Devolved nation: #{@location_lookup.data.first.country}"
} do %>
  <%= render "govuk_publishing_components/components/title", {
    title: title
  } %>
  <p class="govuk-body">
    <%= t("coronavirus_local_restrictions.results.match") %> <strong><%= @postcode %></strong> to <strong><%= @location_lookup.data.first.country %></strong>.
  </p>
  <% if @location_lookup.data.first.scotland? %>
    <%= render "govuk_publishing_components/components/button", {
      text: t("coronavirus_local_restrictions.results.devolved_nations.scotland.guidance.label"),
      href: t("coronavirus_local_restrictions.results.devolved_nations.scotland.guidance.link"),
      margin_bottom: 9
    } %>
  <% elsif @location_lookup.data.first.northern_ireland? %>
    <%= render "govuk_publishing_components/components/button", {
      text: t("coronavirus_local_restrictions.results.devolved_nations.northern_ireland.guidance.label"),
      href: t("coronavirus_local_restrictions.results.devolved_nations.northern_ireland.guidance.link"),
      margin_bottom: 9
    } %>
  <% elsif @location_lookup.data.first.wales? %>
    <%= render "govuk_publishing_components/components/button", {
      text: t("coronavirus_local_restrictions.results.devolved_nations.wales.guidance.label"),
      href: t("coronavirus_local_restrictions.results.devolved_nations.wales.guidance.link"),
      margin_bottom: 9
    } %>
  <% end %>

  <%= render partial: "coronavirus_local_restrictions/travel_guidance" %>
<% end %>
