<section class="covid__nhs-notice"
         aria-label="notice"
         role="region"
         data-module="track-links"
         data-track-category="pageElementInteraction"
         data-track-action="callOutBox">
  <div class="covid__nhs-notice__logo">
    <%= render "govuk_publishing_components/components/organisation_logo", {
      organisation: {
        name: "nhs",
        url: "https://www.nhs.uk/",
        image: {
          url: image_url("nhs-logo.svg"),
          alt_text: "NHS"
        }
      }
    } %>
  </div>

  <% nhs_banner["sections"].each do |section| %>
    <%= render "govuk_publishing_components/components/heading", {
      text: section["heading"],
      heading_level: 2,
      font_size: "m",
      margin_bottom: 4,
    } if section["heading"].present? %>

    <%= render_govspeak(section["markdown"]) if section["markdown"].present? %>
  <% end %>
</section>
