<%
  action_link_blue_arrow ||= false
  action_link_white_arrow ||= false
  action_link_href ||= ""
  action_link_text ||= ""
  action_link_subtext ||= ""
  action_link_mobile_subtext ||= false
  action_link_nowrap_text ||= ""
  action_link_data ||= {}
%>

<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <%= yield %>
  </div>

  <div class="govuk-grid-row covid__action-link-wrapper">
    <div class="govuk-grid-column-two-thirds">
      <%= render 'govuk_publishing_components/components/action_link', {
        blue_arrow: action_link_blue_arrow,
        href: action_link_href,
        text: action_link_text,
        subtext: action_link_subtext,
        mobile_subtext: action_link_mobile_subtext,
        nowrap_text: action_link_nowrap_text,
        data: action_link_data
      } %>
    </div>
  </div>
</div>
