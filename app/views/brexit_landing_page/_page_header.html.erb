<% content_for :is_full_width_header, true %>
<% content_for :title, I18n.t("brexit_landing_page.title") %>
<% content_for :meta_tags do %>
  <meta name="description" content="<%= I18n.t("brexit_landing_page.description") %>">
  <meta name="govuk:navigation-page-type" content="Taxon Page" />
<% end %>

<header class="landing-page__header">
  <div class="full-page-width-wrapper">
    <%= render 'govuk_publishing_components/components/breadcrumbs',
      breadcrumbs: GovukPublishingComponents::AppHelpers::TaxonBreadcrumbs.new(@content_item).breadcrumbs,
      collapse_on_mobile: true
    %>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <%= render "govuk_publishing_components/components/title", {
          title: I18n.t("brexit_landing_page.get_ready")
        } %>

        <%= render 'govuk_publishing_components/components/lead_paragraph', {
          text: I18n.t("brexit_landing_page.intro_text")
        } %>

        <p class="large-paragraph"><%= I18n.t("brexit_landing_page.everyone_must") %>:</p>

        <div class="landing-page__contents">
          <%= render "govuk_publishing_components/components/contents_list", {
            hide_title: true,
            contents: [
              {
                href: "#business",
                text: t('brexit_landing_page.business')
              },
              {
                href: "#individuals",
                text: t('brexit_landing_page.individuals'),

              }
            ]
          } %>
        </div>
      </div>
    </div>

    <% if show_dynamic_list %>
      <div class="landing-page__ready">
        <%= render "govuk_publishing_components/components/govspeak", {
        } do %>
          <div class="call-to-action">
            <h2 class="govuk-heading-m"><%= I18n.t("brexit_landing_page.check_ready") %></h2>
            <p class="govuk-body-l">Answer a few simple questions to <a href="https://brexit-dynamic-lists.cloudapps.digital/start" data-module="track-click" data-track-category="startButtonClicked" data-track-action="https://brexit-dynamic-lists.cloudapps.digital/start" data-track-label="check what you need to do">check what you need to do.</a></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</header>
