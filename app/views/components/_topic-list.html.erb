<%
  items ||= []
  see_more_link ||= false
%>
<% if items.any? %>
  <ol class="app-c-topic-list">
    <% items.each do |item| %>
      <li class="app-c-topic-list__item">
        <%=
          link_to(
            item[:text],
            item[:path],
            data: item[:data_attributes],
            class: 'app-c-topic-list__link'
          )
        %>
      </li>
    <% end %>
    <% if see_more_link %>
      <li class="app-c-topic-list__item">
        <%=
          link_to(
            see_more_link[:text],
            see_more_link[:path],
            data: see_more_link[:data_attributes]
          )
        %>
      </li>
    <% end %>
  </ol>
<% end %>
