<%
  border = true unless index < 2
  mobile_only_border = true if index.eql?(1)
%>

<div class="govuk-grid-column-one-half landing-page__section"
  data-analytics-ecommerce
  data-ecommerce-start-index="1"
  data-list-title="Brexit landing page: <%= t('taxons.brexit.' + bucket["id"]) %>"
  data-search-query>
  <h2 class="
        govuk-heading-m
        landing-page__section-title
        <%= "landing-page__section--border" if border %>
        <%= "landing-page__section--mobile-border" if mobile_only_border %> "
  >
    <% if bucket["link_path"] %>
      <%= link_to(t('taxons.brexit.' + bucket["id"]), bucket["link_path"], data: {
        module: "track-click",
        "track-category": "navGridContentClicked",
        "track-action": index,
        "track-label": bucket["link_path"]
      }) %>
    <% else %>
      <%= t('taxons.brexit.' + bucket["id"]) %>
    <% end %>
  </h2>

  <% if bucket["description"] %>
    <p class="govuk-body landing-page__section-desc"><%= bucket["description"] %></p>
  <% end %>

  <% if bucket["block"] %>
    <%= render "govuk_publishing_components/components/govspeak", {} do %>
      <%= bucket["block"] %>
    <% end %>
  <% end %>

  <% if bucket["items"] %>
    <%= render "components/taxon-list", {
      heading_level: 0,
      items: bucket["items"]
    } %>
  <% end %>
</div>
