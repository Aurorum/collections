<% content_for :title, @content_item.title %>

<% page_class "historic-appointments-index govuk-width-container" %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">
    <%= render "govuk_publishing_components/components/title", {
      context: "History",
      title: @content_item.title,
    } %>
  </div>
</div>

<%= render partial: "shared/featured_historical_figures", locals: { historical_figures_with_image: @content_item.selection_of_profiles, heading: "Selection of profiles"} %>

<% @content_item.centuries_data.each do |heading, people| %>
  <%= render partial: "shared/historical_figures_by_century", locals: { people:, heading: }  %>
<% end %>
