<div class="organisation-department-category">
  <%= render "govuk_publishing_components/components/heading", {
      text: @organisations.category_name_from_type(category_type),
      heading_level: 4
  } %>
  <ul class="organisation-departments">
    <% departments.each do |department| %>
      <li><%= link_to department["title"], department["href"] %></li>
    <% end %>
  </ul>
</div>

