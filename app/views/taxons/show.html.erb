<% content_for :page_class, "taxon-page" %>

<% content_for :breadcrumbs do %>
  <%= render partial: 'govuk_component/breadcrumbs', locals: navigation_helpers.breadcrumbs %>
  <div class="header-context"><%#  Deliberately empty. This will prevent Static from adding a placeholder breadcrumb. %></div>
<% end %>

<%= render partial: 'page_header', locals: {
  taxon: taxon,
  parent_taxon: parent_taxon
} %>

<% if taxon.has_grandchildren? %>
  <%= render partial: 'child_taxons_grid', locals: { child_taxons: child_taxons } %>

  <%= render partial: 'taxon_tagged_content', locals: {
    taxon: taxon,
    tagged_content: tagged_content
  } %>
<% else %>
  <%= render partial: 'child_taxons_list', locals: {
    taxon: taxon,
    child_taxons: child_taxons,
    tagged_content: tagged_content
  } %>
<% end %>
