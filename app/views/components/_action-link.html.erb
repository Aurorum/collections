<%
  text ||= false
  nowrap_text ||= false
  href ||= false
  light_text ||= false
  compact ||= false
  dark_icon ||= false
  data ||= nil
  css_classes = %w(app-c-action-link)
  css_classes << "app-c-action-link--light-text" if light_text
  css_classes << "app-c-action-link--compact" if compact
  css_classes << "app-c-action-link--dark-icon" if dark_icon
%>
<% if href.present? && text.present? %>
  <span class="<%= css_classes.join(' ') %>">
    <%= link_to  href, :class => "govuk-link app-c-action-link__link", :data => data do %>
      <%= text %>
      <%= content_tag(:span, nowrap_text, class: "app-c-action-link__nowrap-text") if nowrap_text %>
    <% end %>
  </span>
<% end %>
