<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-third">
    <%= render "govuk_publishing_components/components/heading", {
      text: topic_section["header"],
      margin_bottom: 6,
      font_size: "m"
    } %>
  </div>

  <div class="govuk-grid-column-two-thirds">
    <% if statistics %>
      <% if statistics.new_positive_tests %>
        <p><%= topic_section.dig("tests", "title") %></p>
        <p><%= topic_section.dig("tests", "daily_heading") %></p>
        <p><%= number_with_delimiter(statistics.new_positive_tests) %></p>
        <p><%= topic_section.dig("tests", "weekly_heading") %></p>
        <p><%= number_with_delimiter(statistics.current_week_positive_tests) %></p>
        <p><%= number_with_delimiter(statistics.current_week_positive_tests_change_number) %></p>
        <p><%= number_to_percentage(statistics.current_week_positive_tests_change_percentage, precision: 1) %>
        <p><%=topic_section.dig("tests", "guidance_link") %></p>
        <p><%=topic_section.dig("updated_date") %> <%= statistics.new_positive_tests_date %></p>
      <% end %>

      <% if statistics.hospital_admissions %>
        <p><%= topic_section.dig("admissions", "title") %></p>
        <p><%= topic_section.dig("admissions", "daily_heading") %></p>
        <p><%= number_with_delimiter(statistics.hospital_admissions) %></p>
        <p><%= topic_section.dig("admissions", "weekly_heading") %></p>
        <p><%= number_with_delimiter(statistics.current_week_hospital_admissions) %></p>
        <p><%= number_with_delimiter(statistics.current_week_hospital_admissions_change_number) %></p>
        <p><%= number_to_percentage(statistics.current_week_hospital_admissions_change_percentage, precision: 1) %>
        <p><%=topic_section.dig("admissions", "guidance_link") %> </p>
        <p><%=topic_section.dig("updated_date") %> <%= statistics.hospital_admissions_date %></p>
      <% end %>

      <% if statistics.cumulative_first_dose_vaccinations %>
        <p><%= topic_section.dig("vaccinations", "title") %></p>
        <p><%= topic_section.dig("vaccinations", "first_dose_heading") %></p>
        <p><%= number_to_percentage(statistics.percentage_first_vaccine, precision: 1) %></p>
        <p><%= number_with_delimiter(statistics.cumulative_first_dose_vaccinations) %></p>
        <p><%= topic_section.dig("vaccinations", "second_dose_heading") %></p>
        <p><%= number_to_percentage(statistics.percentage_second_vaccine, precision: 1) %></p>
        <p><%= number_with_delimiter(statistics.cumulative_second_dose_vaccinations) %></p>
        <p><%=topic_section.dig("vaccinations", "guidance_link") %> </p>
        <p><%=topic_section.dig("updated_date") %> <%= statistics.cumulative_vaccinations_date %></p>
      <% end %>
    <% end %>

    <ul class="govuk-list">
      <% topic_section["links"].each do | link | %>
        <li class="covid__topic-list-item">
          <%= link_to(
            link["label"].html_safe,
            link["url"],
            class: 'covid__topic-list-link govuk-link',
            data: {
              module: "gem-track-click",
              track_category: "pageElementInteraction",
              track_action: "Statistics",
              track_label: link["url"],
            },
          ) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
